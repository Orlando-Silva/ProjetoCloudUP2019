@model ProjetoCloud.DTO.DispositivoDTO
@{
    ViewData["Title"] = "Cadastar Dispositivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar Dispositivo</h2>

<hr />
<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b>@Html.DisplayName("Nome Dispositivo")</b>
                <input asp-for="Nome_Dispositivo" class="form-control text-center" />
                <span asp-validation-for="Nome_Dispositivo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Status_Dispositivo" />
                        <b>@Html.DisplayName("Dispositivo ativo?")</b>
                    </label>
                </div>
            </div>

            <b>@Html.DisplayName("Ambiente")</b>
            <br />
            <input type="text" class="form-control text-center" asp-for="nome_ambiente" />
            <span asp-validation-for="nome_ambiente" class="text-danger"></span>
            <br />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-success">Voltar</a>
                <input type="submit" value="Cadastrar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
