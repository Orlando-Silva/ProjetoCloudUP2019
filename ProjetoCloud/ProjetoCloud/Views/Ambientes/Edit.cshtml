@model DAL.Entidades.Ambiente

@{
    ViewData["Title"] = "Editar Ambiente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Ambiente</h2>

<hr />
<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id_Ambiente" />
        <div class="form-group">
            <b>@Html.DisplayName("Nome Ambiente")</b>
            <input asp-for="Nome_Ambiente" class="form-control text-center" />
            <span asp-validation-for="Nome_Ambiente" class="text-danger"></span>
        </div>
        <div class="form-group">
            <b>@Html.DisplayName("Quantidade Dispositivos")</b>
            <input asp-for="Qtda_Dispositivo_Ambiente" class="form-control text-center" />
            <span asp-validation-for="Qtda_Dispositivo_Ambiente" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Index" class="btn btn-success">Voltar</a> 
            <input type="submit" value="Editar" class="btn btn-info" />
        </div>
    </form>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
